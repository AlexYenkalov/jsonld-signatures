  "files": [
    "browser/*.js",
    "dist/*.js",
    "dist/*.js.map",
    "lib/*.js",
    "lib/**/*.js"
  ],
  "dependencies": {
    "base64url": "^3.0.1",
    "crypto-ld": "^4.0.2",
    "jsonld": "^2.0.2",
    "node-forge": "^0.9.1",
    "security-context": "^4.0.0",
