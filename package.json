    "node": ">=12"
  },
  "keywords": [
    "JSON",
    "Linked Data",
    "JSON-LD",
    "RDF",
    "Semantic Web",
    "jsonld",
    "digital signatures"
  ],
  "scripts": {
    "test": "npm run lint && npm run test-node && npm run test-karma",
    "test-node": "cross-env NODE_ENV=test mocha --preserve-symlinks -t 10000 tests/**/*.spec.js",
    "test-karma": "karma start tests/karma.conf.js",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text-summary npm run test-node",
    "coverage-ci": "cross-env NODE_ENV=test nyc --reporter=text-lcov npm run test-node > coverage.lcov",
    "coverage-report": "nyc report",
    "lint": "eslint lib/ tests/"
  },
  "nyc": {
    "exclude": [
      "tests"
    ]
  },
  "browser": {
    "crypto": false,
    "base64url": false
  }
}
