  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/plugin-transform-modules-commonjs": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/runtime": "^7.11.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "dirty-chai": "^2.0.1",
    "eslint": "^7.6.0",
    "eslint-config-digitalbazaar": "^2.5.0",
    "eslint-plugin-jsdoc": "^30.2.0",
    "karma": "^5.1.1",
